{
    "extends": "../tslint.json",
    "rules": {
        "attributes-order": true,
        "adjacent-overload-signatures": true,
        "align": [true, "parameters", "statements"],
        "callable-types": true,
        "comment-format": [true, "check-space"],
        "component-class-suffix": false,
        "curly": true,
        "directive-selector": [true, "attribute", ["app", "on"], "camelCase"],
        "early-exit": false,
        "encoding": true,
        "eofline": true,
        "forin": true,
        "import-spacing": true,
        "interface-over-type-literal": true,
        "i18n": false,
        "jsdoc-format": true,
        "label-position": true,
        "cyclomatic-complexity": [true, 20],
        "member-access": false,
        "member-ordering": [
            true,
            {
                "order": [
                    "public-static-field",
                    "protected-static-field",
                    "private-static-field",
                    "public-instance-field",
                    "protected-instance-field",
                    "private-instance-field",
                    "constructor",
                    "public-static-method",
                    "protected-static-method",
                    "private-static-method",
                    "public-instance-method",
                    "protected-instance-method",
                    "private-instance-method"
                ]
            }
        ],
        "new-parens": true,
        "newline-before-return": true,
        "newline-per-chained-call": false,
        "no-duplicate-imports": true,
        "no-require-imports": true,
        "no-default-export": true,
        "no-reference": true,
        "no-forward-ref": false,
        "no-invalid-this": true,
        "no-duplicate-super": true,
        "no-misused-new": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-console": [true, "log", "debug", "info", "time", "timeEnd", "trace"],
        "no-construct": true,
        "no-debugger": true,
        "no-empty-interface": true,
        "no-eval": true,
        "no-shadowed-variable": true,
        "no-string-literal": true,
        "no-string-throw": true,
        "no-switch-case-fall-through": true,
        "no-unsafe-finally": true,
        "no-trailing-whitespace": true,
        "no-unused-expression": true,
        "no-var-keyword": true,
        "no-conditional-assignment": true,
        "no-sparse-arrays": true,
        "no-inferrable-types": true,
        "no-internal-module": true,
        "no-unnecessary-type-assertion": true,
        "no-collapsible-if": true,
        "no-else-after-return": true,
        "no-return-undefined": true,
        "no-static-this": true,
        "no-unnecessary-else": true,
        "no-object-literal-type-assertion": true,
        "no-boolean-literal-compare": true,
        "no-null-keyword": false,
        "no-consecutive-blank-lines": [true, 1],
        "no-implicit-dependencies": false,
        "no-output-named-after-standard-event": false,
        "no-output-on-prefix": false,
        "ordered-imports": false,
        "object-literal-sort-keys": false,
        "object-literal-shorthand": true,
        "object-literal-key-quotes": [true, "as-needed"],
        "one-line": [true, "check-open-brace", "check-catch", "check-else", "check-whitespace"],
        "prefer-const-enum": true,
        "prefer-method-signature": true,
        "prefer-object-spread": false,
        "prefer-conditional-expression": false,
        "prefer-for-of": true,
        "prefer-const": true,
        "prefer-template": true,
        "quotemark": [true, "single"],
        "radix": true,
        "switch-default": true,
        "semicolon": [true, "always", "ignore-bound-class-methods"],
        "triple-equals": [true, "allow-null-check"],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "trackBy-function": false,
        "unified-signatures": true,
        "variable-name": [true, "check-format", "allow-leading-underscore"],
        "use-isnan": true,
        "use-input-property-decorator": true,
        "use-output-property-decorator": true,
        "use-host-property-decorator": true,
        "no-output-rename": true,
        "no-input-rename": false,
        "use-life-cycle-interface": true,
        "use-view-encapsulation": true,
        "use-pipe-transform-interface": true,
        "directive-class-suffix": true,
        "no-access-missing-member": false,
        "only-arrow-functions": [true, "allow-declarations", "allow-named-functions"],
        "arrow-parens": [true, "ban-single-arg-parens"],
        "arrow-return-shorthand": true,
        "one-variable-per-declaration": [true, "ignore-for-loop"],
        "no-duplicate-variable": [true, "check-parameters"],
        "no-unnecessary-initializer": true,
        "array-type": [true, "array"],
        "no-invalid-template-strings": true,
        "binary-expression-operand-order": true,
        "prefer-function-over-method": false,
        "pipe-naming": [false, "camelCase"],
        "rxjs-no-unsafe-catch": true,
        "rxjs-no-unsafe-takeuntil": true,
        "rxjs-no-subject-unsubscribe": true,
        "rxjs-throw-error": true,
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-module",
            "check-operator",
            "check-preblock",
            "check-separator",
            "check-type"
        ]
    }
}

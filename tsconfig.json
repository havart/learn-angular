{
    "compileOnSave": false,
    "compilerOptions": {
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "target": "es5",
        "typeRoots": ["node_modules/@types"],
        "types": ["node", "jasmine"],
        "lib": ["es2017", "dom"],
        "baseUrl": ".",
        "paths": {}
    },
    "exclude": ["node_modules", "tmp"]
}
